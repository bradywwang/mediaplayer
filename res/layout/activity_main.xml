<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.brady.mediaplayer.activities.MainActivity" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/material_deep_teal_200" />
        <com.brady.mediaplayer.utils.PagerSlidingTabStrip
            android:id="@+id/main_strip"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/material_deep_teal_200"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/page_controler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

<!--             <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="#000000" /> -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_music_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星空"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_singer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="五月天"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </LinearLayout>

            
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
<!--                 <Button
                    android:id="@+id/btn_last_music"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_last_music"
                    android:layout_margin="6dp" /> -->

                <Button
                    android:id="@+id/btn_play"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_stop"
                    android:layout_margin="2dp" />

<!--                 <Button
                    android:id="@+id/btn_next_music"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_next_music"
                    android:layout_margin="6dp" /> -->
            </LinearLayout>
    </LinearLayout>

</LinearLayout>